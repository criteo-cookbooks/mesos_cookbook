#!/bin/bash
# This file is generated by Chef

# mesos binary configuration
exec <%= @bin %> \
<%- @flags.sort.each do |flag, value|                                      -%>
<%-   case value                                                           -%>
<%-   when Hash                                                            -%>
  <%=   "--#{flag}='"%><%= value.map{|k,v| "#{k}:#{v}"}.join(';') %><%= "'" %> \
<%-   when String                                                          -%>
  <%=   "--#{flag}='#{value}'"                                             %> \
<%-   when Integer                                                         -%>
  <%=   "--#{flag}=#{value}"                                                %> \
<%-   else                                                                 -%>
  <%=   "--#{value ? '' : 'no-'}#{flag}"                                    %> \
<%-   end                                                                  -%>
<%- end                                                                    -%>
